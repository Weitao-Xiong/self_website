---
import path from "node:path";

interface Props {
	id?: string;
	src: string;
	class?: string;
	alt?: string;
	position?: string;
	basePath?: string;
}

import { Image } from "astro:assets";
import { url } from "../../utils/url-utils";

const { id, src, alt, position = "center", basePath = "/" } = Astro.props;
const className = Astro.props.class;

// Check if it's an assets path first (before checking public path)
const isAssetsPath =
	src.startsWith("/src/assets/") ||
	src.startsWith("assets/") ||
	src.startsWith("src/assets/");
// Public paths are paths starting with / but NOT assets paths
const isPublic = src.startsWith("/") && !isAssetsPath;
// Local paths are relative paths (not starting with /, http, https, or data:)
// Assets paths should also be treated as local for processing
const isLocal = !(
	src.startsWith("/") ||
	src.startsWith("http") ||
	src.startsWith("https") ||
	src.startsWith("data:")
);

// TODO temporary workaround for images dynamic import
// https://github.com/withastro/astro/issues/3373
// biome-ignore lint/suspicious/noImplicitAnyLet: <check later>
let img;
// Process assets paths and local relative paths using Astro Image component
if (isAssetsPath || isLocal) {
	const files = import.meta.glob<ImageMetadata>("../../**", {
		import: "default",
	});
	// Handle different path formats
	let imageSrc = src;
	if (src.startsWith("/src/assets/")) {
		// /src/assets/images/filename.jpg -> assets/images/filename.jpg
		imageSrc = src.replace("/src/", "");
	} else if (src.startsWith("src/assets/")) {
		// src/assets/images/filename.jpg -> assets/images/filename.jpg
		imageSrc = src.replace("src/", "");
	} else if (src.startsWith("assets/")) {
		// assets/images/filename.jpg -> keep as is
		imageSrc = src;
	}

	// Try direct assets path first
	const directPath = path
		.normalize(path.join("../../", imageSrc))
		.replace(/\\/g, "/");
	let file = files[directPath];

	// If not found, try with basePath
	if (!file) {
		const normalizedPath = path
			.normalize(path.join("../../", basePath, imageSrc))
			.replace(/\\/g, "/");
		file = files[normalizedPath];
	}

	if (file) {
		img = await file();
	} else {
		console.error(`\n[ERROR] Image file not found: ${imageSrc}`);
	}
}

const imageClass = "w-full h-full object-cover";
const imageStyle = `object-position: ${position}`;
---
<div id={id} class:list={[className, 'overflow-hidden relative']}>
    <div class="transition absolute inset-0 dark:bg-black/10 bg-opacity-50 pointer-events-none"></div>
    {(isLocal || isAssetsPath) && img && <Image src={img} alt={alt || ""} class={imageClass} style={imageStyle}/>}
    {!(isLocal || isAssetsPath) && <img src={isPublic ? url(src) : src} alt={alt || ""} class={imageClass} style={imageStyle}/>}
</div>
